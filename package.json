{
  "name": "mrozilla-react",
  "version": "1.4.1",
  "description":
    "the online home of a one-man digital studio. built with react and üç∫.",
  "license": "MIT",
  "repository": "https://github.com/mrozilla/mrozilla.cz",
  "bugs": "https://github.com/mrozilla/mrozilla.cz/issues",
  "author": {
    "name": "Jan",
    "email": "jan@mrozilla.cz",
    "url": "mrozilla.cz"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "source-map-explorer": "^1.5.0"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-ga": "^2.3.5",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.14",
    "styled-components": "^2.2.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "analyze": "source-map-explorer build/static/js/main.*",
    "predeploy:prod": "yarn build",
    "deploy:test":
      "duck -e overwrite --upload ftp://$WEDOS_MROZILLA/www/subdom/test/ build/",
    "deploy:prod":
      "duck -e overwrite --upload ftp://$WEDOS_MROZILLA/www/domains/mrozilla.cz build/",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "parser": "babel-eslint",
    "extends": ["airbnb"],
    "rules": {
      "no-confusing-arrow": "off",
      "no-nested-ternary": "off",
      "react/jsx-filename-extension": "off",
      "no-unused-expressions": [
        "error",
        {
          "allowShortCircuit": true,
          "allowTernary": true
        }
      ],
      "max-len": ["error", 80],
      "key-spacing": [
        "warn",
        {
          "align": "value"
        }
      ]
    }
  }
}
